<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/textEditor"
        android:text="Tel:"
        android:id="@+id/telLabel">
    </TextView>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/telLabel"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textEditor"
        android:background="#FFFF00"
        android:hint="Write something here">
    </EditText>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textEditor"
        app:layout_constraintTop_toBottomOf="@+id/openActivity">
    </TextView>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello"
    android:id="@+id/openActivity"
    app:layout_constraintRight_toLeftOf="parent"
    app:layout_constraintBottom_toTopOf="parent">

</Button>

</androidx.constraintlayout.widget.ConstraintLayout>